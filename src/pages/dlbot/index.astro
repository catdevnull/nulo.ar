---
import { Icon } from "astro-icon/components";

import Layout from "../../layouts/Layout.astro";
const title = "DlBot";
const description =
  "Un bot para Telegram que descarga videos de TikTok, Instagram Reels y YouTube Shorts.";
---

<Layout title={title} description={description}>
  <section
    class="min-h-screen flex flex-col lg:flex-row items-center justify-center"
  >
    <div class="p-6 lg:p-12 max-w-3xl flex flex-col gap-4">
      <h1 class="font-black text-6xl lg:text-8xl">
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500"
          >DlBot</span
        >
      </h1>
      <p class="text-3xl lg:text-5xl leading-tight lg:leading-tight">
        Un bot para
        <span class="inline-block font-semibold">
          <Icon
            class="w-[.8em] h-auto inline align-middle mr-[.25em]"
            name="bi:telegram"
          />Telegram
        </span>
        que descarga videos de
        <span class="inline-block">
          <Icon
            class="w-[.8em] h-auto inline align-middle mr-[.25em]"
            name="bi:tiktok"
          /><span class="font-semibold">TikTok</span>,
        </span>
        <span class="inline-block">
          <Icon
            class="w-[.8em] h-auto inline align-middle mr-[.25em]"
            name="bi:instagram"
          /><span class="font-semibold">Instagram Reels</span> y
        </span>
        <span class="inline-block">
          <Icon
            class="w-[.8em] h-auto inline align-middle mr-[.25em]"
            name="bi:youtube"
          /><span class="font-semibold">YouTube Shorts</span>.
        </span>
      </p>
      <a
        href="https://t.me/dlthefourthbot"
        rel="noreferrer noopener"
        target="_blank"
        class="flex mx-auto px-[.75em] py-[.5em] text-lg lg:text-3xl font-medium text-white transition-colors duration-200 bg-[#179cde] rounded-md hover:bg-[#179cde]/90 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:shadow-outline focus:outline-none"
      >
        <Icon
          class="w-[1em] h-auto inline align-middle mr-3"
          name="bi:telegram"
        />
        @dlthefourthbot
      </a>
    </div>
  </section>

  <!-- TODO: mostrar como agregar a grupos -->

  <footer class="flex flex-col w-full p-12 items-center">
    <a
      class="flex gap-2 leading-none *:block text-lg"
      href="https://github.com/catdevnull/dlbot4"
    >
      <Icon name="bi:git" />
      <span class="font-medium underline">Ver c√≥digo fuente</span>
    </a>
  </footer>
</Layout>
