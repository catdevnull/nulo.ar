{
  "exclude": ["build.js/", "build/"],
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,

    "jsx": "preserve",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
